<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yifeng.view.view.WaterRippleView
        android:id="@+id/wrv_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/page_padding"
        android:layout_gravity="center"
        app:rippleColor="#fd9200"
        app:rippleCenterIcon="@mipmap/ic_water_ripple"
        app:rippleCount="4"
        app:rippleSpacing="16dp"
        app:rippleAutoRunning="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/page_padding"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="onClickStart"
            android:text="Start"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/page_padding"
            android:onClick="onClickStop"
            android:text="Stop"/>

    </LinearLayout>


</LinearLayout>